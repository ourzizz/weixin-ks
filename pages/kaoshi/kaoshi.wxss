  justify-content: center;
  box-sizing: border-box;
  margin-top: 4rpx;
  border-radius: 2%;
  background: #243949; /*这个颜色做底色很好看*/
}
.msgtitle,.filetitle{
  color: gold;
  padding: 0rpx 0rpx 0rpx 1rpx; /*上右*/
  position: flex;
}
