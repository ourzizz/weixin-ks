/* pages/kaoshi/kaoshi.wxss */
.container {
  width: 100%;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
}

.pagehead, .uploader, .tunnel {
  margin-top: 4rpx;
  height: 140rpx;
  width: 100%;
  background: rgba(0, 0, 5, 0.100);
  border: 1px solid rgba(0, 0, 0, 0.10);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  margin: 1px;
  border-radius: 3%;
  background: #3CB371;
  
}

.img {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 60%;
  position: relative;
  vertical-align:middle;/*让图片和文字处于同一水平*/
}

.title {
  margin-left: 45px;
  color: black;
  font-weight: bold;
  font-size: 20px;
  font-family: Serif  ;
  
}

.moremsg {
  background: red;
  height: 50rpx;
  width: 18%;
  font-size: 10px;
  border: 1px;
  margin: 0px;
  padding: 1px;
  position: absolute;
  left: 78%;/*调整了解更多按钮，相对于整个页面的纵向和横向坐标位置*/
  top: 20%;
}
.ksmingchen {
  font-size: 22px;
  margin: 15px; /*上下左右边框能起到让元素垂直居中的功能*/
  /*text-align: center;*/
}

.navigation {
 width: 100%;
   line-height: 52px;
  font-size: 34rpx;
  vertical-align: center;/**/
}

.message,.note { /**/
  margin-top: 4rpx;
  height: 140rpx;
  width: 100%;
  /*background: #708090;*/
  background: #5f9ea0;

  display: flex;
  flex-direction: row;
  transition: all 300ms ease;
  margin: 1px;
  font-size: 12px;
  vertical-align: center;
  border-radius: 2%;
}
.note{
  background: #009933;
}
